create table STUDENT(ID char(4)NOT NULL,NAME varchar(20)NOT NULL,DEPARTMENT char(3)NOT NULL,CGPA decimal(2,1)NOT NULL,PRIMARY key(ID));
create table COMPANY(ID char(4)NOT NULL,NAME varchar(20)NOT NULL,LOCATION varchar(20)NOT NULL,INTERVIEW_DATE date NOT NULL,Primary key(ID));
create table PLACEMENTS (S_ID char(4)NOT NULL,C_ID char(4)NOT NULL,PACKAGE BIGINT(9)NOT NULL,Foreign key (S_ID)references STUDENT(ID),Foreign key(C_ID)references COMPANY(ID));

Answer 1:
 SELECT STUDENT.NAME,COMPANYS.NAME,PLACEMENTS.PACKAGE FROM STUDE
NT JOIN COMPANYS JOIN PLACEMENTS ON STUDENT.ID=PLACEMENTS.S_ID AND COMPANYS.ID=PLACEMENTS.C_I
D WHERE PACKAGE=(SELECT MAX(PACKAGE) FROM PLACEMENTS);
Answer 3:
select COMPANYS.NAME as COMPANYS,COUNT(COMPANYS.NAME) as NO_OF_STUDENTS from COMPANYS join PLACEMENTS where COMPANYS.ID=PLACEMENTS.C_ID group by COMPANYS.NAME;

Answer 4:
select monthname(interview_date) as Month ,name as COMPANYS from COMPANYS where monthname(interview_date)='September';

Answer 5:
select NAME, INTERVIEW_DATE as DATE from COMPANYS;

Answer 6:
SELECT STUDENT.NAME,COMPANYS.NAME,PLACEMENTS.PACKAGE FROM STUDE
NT JOIN COMPANYS JOIN PLACEMENTS ON STUDENT.ID=PLACEMENTS.S_ID AND COMPANYS.ID=PLACEMENTS.C_I
D WHERE S_ID=  ( SELECT S_ID FROM PLACEMENTS GROUP BY S_ID ORDER BY COUNT(S_ID)  DESC LIMIT 1
);

Answer 7:
SELECT STUDENT.NAME, STUDENT.DEPARTMENT,STUDENT.CGPA FROM STUDENT LEFT JOIN  PLACEMENTS ON STUDENT.ID=PLACEMENTS.S_ID WHERE PLACEMENTS.S_ID IS NULL AND STUDENT.CGPA>7;

Answer 8:
select NAME,LOCATION from COMPANYS where LOCATION like 'B%';


select STUDENT.NAME ,COMPANYS.NAME from STUDENT join PLACEME
NTS on STUDENT.ID=PLACEMENTS.S_ID join COMPANYS on PLACEMENTS.C_ID=COMPANYS.ID  where
STUDENT.ID in(select S_ID from PLACEMENTS group by S_ID having count(*)>1);
